<div data-controller="send-image">

  <h1>Home page</h1>

  <form action="/" method="post"  data-send-image-target="form" data-action="submit->send-image#uploadImage">
    <input  type="file" name="image_file">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <input type="submit">
  </form>

  <div data-send-image-target="result">
    <%= render 'ingredients', text: @text %>
  </div>

</div>
